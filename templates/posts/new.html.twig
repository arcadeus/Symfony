{% extends 'base.html.twig' %}
{% block title %}{{ page_title }}{% endblock %}
{% block body %}
    <h1>{{ page_title }}</h1>
    <a href="." style="position:fixed; top:1em; right:1em">Наверх</a>
    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.body, { 'attr': {
            'rows' : '10',
            'cols' : '30' }}) }}
    <button class="btn btn-default" type="submit">Сохранить</button>
    {{ form_end(form) }}
{% endblock %}
